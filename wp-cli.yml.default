path: public

core config:
  dbuser: db_user
  dbpass: db_pass
  dbname: wordpress
  dbhost: 127.0.0.1
  extra-php: |
        if ( (isset($_SERVER['HTTP_X_FORWARDED_PROTO'])) && strpos($_SERVER['HTTP_X_FORWARDED_PROTO'], 'https') !== false) {
            $_SERVER['HTTPS']='on';
        }
core install:
  title: Sample Planet 4 website
  url: http://test.planet4.dev
  admin_user: admin
  admin_email: admin@example.com

theme activate:
  - planet4-child-theme
