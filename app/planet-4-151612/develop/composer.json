{
	"name": "greenpeace/planet4-base-gpi",
	"version": "0.2.1",

	"repositories": [
		{
			"type": "composer",
			"url": "https://p4-composer-registry.greenpeace.org/"
		},
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "composer",
			"url": "https://packagist.org"
		}
	],

	"require": {
		"greenpeace/planet4-child-theme" : "dev-develop",
		"greenpeace/planet4-child-theme-greece" : "dev-master",
		"greenpeace/planet4-child-theme-handbook" : "dev-master",
		"greenpeace/planet4-master-theme" : "dev-develop",
		"greenpeace/planet4-plugin-blocks" : "dev-develop",
		"greenpeace/planet4-plugin-migrated-urls" : "0.0.1",
		"greenpeace/planet4-plugin-wpimport-upstream" : "4.5.0",
		"wpackagist-plugin/nginx-helper": "^1.9"
	},

	"scripts": {
		"download:plugin1": "curl -o searchwp-stemmer-greek-1.0.2.zip https://raw.githubusercontent.com/greenpeace/planet4-plugin-searchwp/master/searchwp-stemmer-greek-1.0.2.zip",
		"install:plugin1": "wp plugin install searchwp-stemmer-greek-1.0.2.zip --activate",
		"core:language": "wp language core install el",
		"site:custom" : ["@download:plugin1", "@install:plugin1", "@core:language"]
	}
}
